<%- include("../partials/header") %>
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Update <%=campground.name%></h1>
        </div>
        <div class="col-lg-4 col-md-6 col-10 mx-auto">
            <form action="/campgrounds/<%= campground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name of campground</label>
                    <input class="form-control" id="name" type="text" name="campground[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <label for="price">Price per night stay</label>
                    <input class="form-control" id="price" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image URL for the Campground</label>
                    <input class="form-control" id="image" type="text" type="text" name="campground[image]" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" name="campground[description]" value="<%=campground.description%>">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Go Back</a>
        </div>
    </div>

