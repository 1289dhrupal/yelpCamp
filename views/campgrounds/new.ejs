<%- include("../partials/header") %>
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Create new Campground</h1>
        </div>
        <div class="col-lg-4 col-md-6 col-10 mx-auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name of campground</label>
                    <input class="form-control" id="name" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="price">Price per night stay</label>
                    <input class="form-control" id="price" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image URL for the Campground</label>
                    <input class="form-control" id="image" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" name="description" placeholder="Description">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add campground</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>