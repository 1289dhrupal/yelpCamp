<%- include("../partials/header") %>
<div class="row">
    <div class="col-md-3 mb-5">
        <div class="list-group">
            <li class="list-group-item active"> Info 1 </li>
            <li class="list-group-item"> Info 2 </li>
            <li class="list-group-item"> Info 3 </li>
        </div>
    </div>
    <div class="col-md-9 mb-5">
        <div class="card mb-5">
            <img class="card-img-top" alt="Image for <%= campground.name %>" src="<%= campground.image%>">
            <div class="card-body">
                <h4 class="float-right"><%=campground.price%>$/night</h4>
                <h4 class="card-title"><%= campground.name %></h4>
                <p class="card-text"><em>Submitted by: <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em></p>
                <hr>
                <p class="card-text"><%= campground.description%></p>   
                    <%if(currentUser && campground.author.id.equals(currentUser._id)){%>
                    <a href="/campgrounds/<%=campground._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                    <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class=" btn btn-sm btn-danger">Delete</button>
                    </form>
                <%}%>
            </div>
        </div>
        <div class="bg-light card">
            <div class="card-header text-right">
                <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Leave new comment</a>
            </div>
            <% campground.comments.forEach(function (comment) { %>
                <div class="card m-1">
                    <div class="col-md-12">
                        <strong class="card-title"><%= comment.author.username%></strong>
                        <div class="card-body col-lg-3 float-right">
                            <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
                                <div><em><%= moment(comment.createdAt).fromNow() %></em></div>
                                <br><a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                                <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/?_method=DELETE" method="POST">
                                    <button class=" btn btn-sm btn-danger">Delete</button>
                                </form>
                            <%}%>
                        </div>
                        <p class="card-body col-lg-9"><%= comment.text%></p>
                        
                    </div>
                    
                </div>
            <%})%>            
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
