<%- include("../partials/header") %>
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Add new Comment to <%= campground.name%></h1>
        </div>
        <div class="col-lg-4 col-md-6 col-10 mx-auto">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input class="form-control" id="descriptioncommentt" name="comment[text]" placeholder="text">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add comment</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>