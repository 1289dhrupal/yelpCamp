
<%- include("../partials/header") %>
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1 class="display-4">Update your comment</h1>
        </div>
        <div class="col-lg-4 col-md-6 col-10 mx-auto">
            <form action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input class="form-control" id="descriptioncommentt" name="comment[text]" value="<%=comment.text%>"">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update comment</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id%>">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>